<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>



    <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="/assets/Rails+Stripe.jpg">
          <span class="card-title">Just for Practise.</span>
        </div>
        <div class="card-content">
          <p>This is just a test app to play around with stripe api. I do not own the image.</p>
        </div>       
      </div>
    </div>
  </div>

    <label class="amount">
      <span>Amount: $10.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Customized Photos"
          data-amount="1000"
          data-locale="auto"></script>
<% end %>
</div>
